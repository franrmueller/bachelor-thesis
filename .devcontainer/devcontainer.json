{
  "name": "thesis-latex",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y texlive-latex-recommended texlive-latex-extra texlive-fonts-recommended texlive-bibtex-extra latexmk biber python3-pygments ghostscript",
  "customizations": {
    "vscode": {
      "extensions": ["James-Yu.latex-workshop"],
      "settings": {
        "latex-workshop.latex.tools": [
          {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
              "-pdf",
              "-interaction=nonstopmode",
              "-synctex=1",
              "-shell-escape",
              "%DOC%"
            ]
          }
        ],
        "latex-workshop.latex.recipes": [
          { "name": "latexmk (pdf)", "tools": ["latexmk"] }
        ]
      }
    }
  }
}